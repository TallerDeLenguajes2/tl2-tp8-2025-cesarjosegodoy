@model IEnumerable<SistemaVentas.Web.Models.Presupuesto> // cambie el List< Boton para crear productos 

@{
    ViewData["Title"]="Lista de Presupuestos" ; // título - aparece en la barra de título del navegador 
} 
    
<h2>Lista de Presupuestos</h2>
<hr />

<p>
        <a asp-action="Create" class="btn btn-success my-4">Crear Nuevo Presupuesto</a>
        <a asp-controller="Productos" asp-action="Create" class="btn btn-primary my-4 ml-2">Crear Producto</a>
</p>

<table class="table table-striped table-bordered">   
    <thead class="thead-dark">
       <tr>
            <th>@Html.DisplayNameFor(model => model.IdPresupuesto)</th>
            <th>@Html.DisplayNameFor(model => model.NombreDestinatario)</th>
            <th>@Html.DisplayNameFor(model => model.FechaCreacion)</th>
            <th>Monto Total (c/IVA)</th>
            <th>Acciones</th>
        </tr>
      </thead>
       <tbody>
          @foreach (var presupuesto in Model)
          {
             <tr>
                <td>@presupuesto.IdPresupuesto</td>
                <td>@presupuesto.NombreDestinatario</td>
                <td>@presupuesto.FechaCreacion.ToString("dd/MM/yyyy")</td>
                <td>$ @presupuesto.MontoPresupuestoConIva().ToString("N2")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@presupuesto.IdPresupuesto"
                            class="btn btn-info btn-sm">Detalles</a>
                        <a asp-action="Edit" asp-route-id="@presupuesto.IdPresupuesto"
                            class="btn btn-warning btn-sm">Editar</a>
                        <a asp-action="Delete" asp-route-id="@presupuesto.IdPresupuesto"
                            class="btn btn-danger btn-sm">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

@if (!Model.Any())
{
        <div class="alert alert-info" role="alert">
            No hay presupuestos registrados. <a asp-action="Create" class="alert-link">Crear el primer
                presupuesto</a>.
        </div>
}

    <div>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Volver al Inicio</a>
    </div>