@model SistemaVentas.Web.ViewModels.ProductoViewModel

@{
    ViewData["Title"] = "Crear Producto";
}

<h2 class="mt-4">Crear Nuevo Producto</h2>
<hr />
<div class="row">
    <div class="col-md-6">

        <!-- El formulario enviará los datos al método Create del controlador -->
        <form asp-action="Create">

            <div class="form-group">
                <label asp-for="Descripcion" class="control-label">Descripción:</label>
                <input asp-for="Descripcion" class="form-control" />
                <!-- Mensajes de validación -->
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Precio" class="control-label">Precio:</label>
                <input asp-for="Precio" class="form-control" type="number" step="0.01" />
                <!-- step permite decimales -->
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Crear" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>

        @section Scripts {
            <partial name="_ValidationScriptsPartial" />
        }
    </div>
</div>